<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/spalsh_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Quiz2_Screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/score"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:text="Score"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="27dp"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/question"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/score_text"
            android:layout_marginTop="23dp"
            android:layout_toStartOf="@+id/score"
            android:padding="8dp"
            android:text="Which thing is alive?"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/choice2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/choice3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="#0091EA"
            android:padding="8dp"
            android:text="door"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/choice3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/choice4"
            android:layout_alignStart="@+id/choice2"
            android:layout_marginBottom="23dp"
            android:background="#0091EA"
            android:padding="8dp"
            android:text="rock"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/choice4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/choice1"
            android:layout_alignStart="@+id/choice3"
            android:layout_marginBottom="19dp"
            android:background="#0091EA"
            android:padding="8dp"
            android:text="plant"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/choice1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quit"
            android:layout_alignStart="@+id/choice4"
            android:layout_marginBottom="30dp"
            android:background="#0091EA"
            android:padding="8dp"
            android:text="bird"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/quit"
            android:layout_width="150dp"
            android:layout_height="39dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_light"
            android:padding="8dp"
            android:text="quit"
            android:textColor="#fff"
            android:textStyle="bold" />

    </RelativeLayout>


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_quiz2__screen" />



</LinearLayout>